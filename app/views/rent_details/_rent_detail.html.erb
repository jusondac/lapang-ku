<div id="<%= dom_id rent_detail %>">
  <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
    <td class="w-4 p-4">
      <div class="flex items-center">
        <input id="checkbox-table-search-1" type="checkbox" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
        <label for="checkbox-table-search-1" class="sr-only">checkbox</label>
      </div>
    </td>
    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
      <%= rent_detail.hours %> Hours
    </th>
    <td class="px-6 py-4">
      <%= rent_detail.membership&.name || rent_detail.behalf %>
    </td>
    <td class="px-6 py-4">
      <% if rent_detail.membership.nil? %>
        <span class="bg-red-100 text-red-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-red-900 dark:text-red-300">Not Membership</span>
      <% else %>
        <span class="bg-blue-100 text-blue-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">Membership</span>
      <% end %>
    </td>
    <td class="flex items-center px-6 py-4">
      <% if action_name != "show" %>
        <%= link_to "Edit", edit_rent_detail_path(rent_detail), class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
        <%= button_to "Remove" , rent_detail, method: :delete, data: {confirm: "Apakah kamu yakin?"},class:'font-medium text-red-600 dark:text-red-500 hover:underline ms-3'%>
        <hr class="mt-6">
      <% end %>
    </td>
  </tr>
</div>

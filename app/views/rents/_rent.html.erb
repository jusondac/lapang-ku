<div id="<%= dom_id rent %>">
  <tr class="hover:dark:bg-gray-800 transition-all">
    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 dark:text-gray-200">
      <div class="text-base font-semibold">
        <%= rent.field.name %>
      </div>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 dark:text-gray-200">
      <%= rent.field.field_type.name %>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 dark:text-gray-200">
      <%= rent.hours %> Hours
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 dark:text-gray-200">
      <%= rent.rent_date.strftime("%d %B, %Y") %>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 dark:text-gray-200">
      <%= rent.start.localtime.strftime("%H:%M") %>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 dark:text-gray-200">
      <%= rent.finish.localtime.strftime("%H:%M") %>
    </td>
    <td class="px-6 py-4 whitespace-nowrap flex justify-end text-sm font-medium">
      <%= link_to  rent, class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" data-slot="icon" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
        </svg>
      <% end %>
    </td>
  </tr>
</div>

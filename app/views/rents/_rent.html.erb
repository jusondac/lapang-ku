<div id="<%= dom_id rent %>">
  <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
    <td class="w-4 p-4">
      <div class="flex items-center">
        <input id="checkbox-table-search-1" type="checkbox" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
        <label for="checkbox-table-search-1" class="sr-only">checkbox</label>
      </div>
    </td>
    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
      <%= rent.field.name %>
    </th>
    <td class="px-6 py-4">
      <%= rent.field.field_type.name %>
    </td>
    <td class="px-6 py-4">
      <%= rent.hours %> Hours
    </td>
    <td class="px-6 py-4">
      <%= rent.rent_date.strftime("%d %B, %Y") %>
    </td>
    <td class="px-6 py-4">
      <%= rent.start.localtime.strftime("%H:%M") %>
    </td>
    <td class="px-6 py-4">
      <%= rent.finish.localtime.strftime("%H:%M") %>
    </td>
    <td class="flex items-center px-6 py-4">
      <% if action_name != "show" %>
        <%= link_to  rent, class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" data-slot="icon" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
          </svg>
        <% end %>
      <% end %>
    </td>
  </tr>
</div>
